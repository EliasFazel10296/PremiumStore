<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:id="@+id/circleIconBackground"
        android:height="27dp"
        android:gravity="center">

        <shape
            android:shape="rectangle">

            <solid android:color="@color/transparent" />

        </shape>

    </item>

    <item
        android:height="27dp"
        android:gravity="center">

        <shape
            android:shape="rectangle" >

            <corners
                android:radius="51dp"/>

            <gradient
                android:type="linear"
                android:angle="-45"
                android:startColor="@color/white"
                android:endColor="@color/premiumLight" />

        </shape>

    </item>

    <item
        android:height="25dp"
        android:start="1dp"
        android:end="1dp"
        android:gravity="center">

        <shape
            android:shape="rectangle" >

            <corners
                android:radius="51dp"/>

            <gradient
                android:type="linear"
                android:angle="-45"
                android:startColor="@color/premiumLight"
                android:endColor="@color/white" />

        </shape>

    </item>

    <item
        android:id="@+id/rippleMask"
        android:height="25dp"
        android:start="1dp"
        android:end="1dp"
        android:gravity="center">

        <ripple
            android:color="@color/default_color_bright">

            <item android:id="@android:id/mask">

                <shape android:shape="rectangle">

                    <corners
                        android:radius="51dp"/>

                    <solid android:color="@color/default_color_bright" />

                </shape>

            </item>

        </ripple>

    </item>

</layer-list>