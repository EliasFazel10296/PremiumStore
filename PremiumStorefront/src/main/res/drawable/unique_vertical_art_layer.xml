<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:id="@+id/verticalArtLayer"
        android:width="199dp"
        android:height="303dp">

        <shape android:shape="rectangle">

            <corners
                android:topLeftRadius="19dp"
                android:topRightRadius="19dp"
                android:bottomLeftRadius="19dp"
                android:bottomRightRadius="19dp"/>

            <solid android:color="@color/transparent" />

        </shape>

    </item>

    <item
        android:id="@+id/rippleMask">
        <ripple
            android:color="@color/default_color">

            <item
                android:id="@android:id/mask">

                <shape android:shape="rectangle">

                    <corners
                        android:topLeftRadius="19dp"
                        android:topRightRadius="19dp"
                        android:bottomLeftRadius="19dp"
                        android:bottomRightRadius="19dp"/>

                    <solid android:color="@color/default_color" />

                </shape>

            </item>

        </ripple>
    </item>

</layer-list>