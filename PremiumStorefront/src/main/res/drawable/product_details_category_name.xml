<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:height="43dp"
        android:width="231dp">

        <shape
            android:shape="rectangle"
            android:useLevel="false">

            <corners
                android:topLeftRadius="19dp"
                android:bottomLeftRadius="19dp"
                android:topRightRadius="51dp"
                android:bottomRightRadius="51dp"/>

            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="@color/default_color_light"
                android:centerColor="@color/default_color"
                android:endColor="@color/default_color_bright"/>

        </shape>

    </item>

    <item
        android:id="@+id/clearLayer"
        android:height="41dp"
        android:width="229.7dp"
        android:top="1.13dp">

        <shape
            android:shape="rectangle"
            android:useLevel="false">

            <corners
                android:topLeftRadius="19dp"
                android:bottomLeftRadius="19dp"
                android:topRightRadius="51dp"
                android:bottomRightRadius="51dp"/>

            <solid
                android:color="@color/green" />

        </shape>

    </item>

</layer-list>