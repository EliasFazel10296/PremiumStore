<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootViewItem"
    android:layout_width="match_parent"
    android:layout_height="79dp"
    android:layout_marginVertical="3dp"
    android:background="@color/transparent"

    apps:layout_constraintDimensionRatio="1:1">

    <net.geekstools.imageview.customshapes.ShapesImage
        android:id="@+id/productIconImageView"
        android:layout_width="59dp"
        android:layout_height="59dp"
        android:padding="17dp"
        android:scaleType="fitCenter"
        android:tint="@color/white"
        android:src="@drawable/diamond_icon"
        android:background="@drawable/category_background_item"

        apps:shape="circle"

        apps:layout_constraintTop_toTopOf="parent"
        apps:layout_constraintBottom_toBottomOf="parent"
        apps:layout_constraintStart_toStartOf="parent"
        apps:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>