<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StorefrontConfigurations.UserInterface.Storefront">

    <net.geeksempire.blurry.effect.view.RealtimeBlurView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        apps:realtimeBlurRadius="3dp"
        apps:realtimeBlurGradientType="radial"
        apps:realtimeFirstColor="@color/premiumLightTransparent"
        apps:realtimeSecondColor="@color/transparent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
