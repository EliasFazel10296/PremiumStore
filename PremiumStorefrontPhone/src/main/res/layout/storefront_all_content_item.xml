<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootViewItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="17dp"
    android:layout_marginEnd="0dp"
    android:layout_marginTop="7dp"
    android:layout_marginBottom="11dp"
    android:background="@android:color/transparent"

    apps:layout_constraintDimensionRatio="1:1">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/productIconImageView"
        android:layout_width="87dp"
        android:layout_height="87dp"
        android:layout_marginTop="23dp"
        android:padding="7.7dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        android:background="@drawable/application_icon_glowing_frame"

        apps:layout_constraintTop_toTopOf="parent"
        apps:layout_constraintStart_toStartOf="parent"/>

    <net.geeksempire.blurry.effect.view.RealtimeBlurView
        android:id="@+id/productRateBlur"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_marginVertical="11dp"
        android:layout_marginHorizontal="53dp"
        android:visibility="gone"

        apps:realtimeBlurRadius="1dp"
        apps:realtimeBlurGradientType="none"
        apps:realtimeFirstColor="@color/light_transparent_higher"
        apps:realtimeBlurTopLeft="51dp"
        apps:realtimeBlurTopRight="51dp"
        apps:realtimeBlurBottomLeft="51dp"
        apps:realtimeBlurBottomRight="51dp"

        apps:layout_constraintTop_toTopOf="parent"
        apps:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="7sp"
        android:scaleType="fitCenter"
        android:src="@drawable/current_rate_icon"

        apps:layout_constraintTop_toTopOf="@id/productRateBlur"
        apps:layout_constraintBottom_toBottomOf="@id/productRateBlur"
        apps:layout_constraintStart_toStartOf="@id/productRateBlur"
        apps:layout_constraintEnd_toEndOf="@id/productRateBlur"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/productCurrentRateView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@color/red"
        android:textSize="29sp"
        android:text="5.0"
        android:fontFamily="@font/neon"
        android:shadowRadius="5"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowColor="@color/red"

        apps:layout_constraintTop_toTopOf="@id/productRateBlur"
        apps:layout_constraintBottom_toBottomOf="@id/productRateBlur"
        apps:layout_constraintStart_toStartOf="@id/productRateBlur"
        apps:layout_constraintEnd_toEndOf="@id/productRateBlur"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/productNameTextView"
        android:layout_width="0dp"
        android:layout_height="47dp"
        android:paddingHorizontal="13dp"
        android:gravity="center_vertical"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@color/dark"
        android:textSize="37sp"
        android:text="@string/applicationName"
        android:fontFamily="@font/upcil"
        android:shadowColor="@color/white"
        android:shadowRadius="11"

        apps:layout_constraintBottom_toBottomOf="@id/productIconImageView"
        apps:layout_constraintStart_toEndOf="@id/productIconImageView"
        apps:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/productSummaryTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingVertical="7dp"
        android:paddingStart="3dp"
        android:paddingEnd="13dp"
        android:gravity="top|start"
        android:maxLines="3"
        android:textColor="@color/dark"
        android:textSize="17sp"
        android:text="@string/applicationName"

        apps:layout_constraintTop_toBottomOf="@id/productNameTextView"
        apps:layout_constraintStart_toStartOf="parent"
        apps:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_marginVertical="3dp"
        android:paddingTop="1dp"
        android:paddingBottom="11dp"
        android:src="@drawable/diamond_solid_icon"
        android:background="@drawable/all_content_divider_light"

        apps:layout_constraintTop_toBottomOf="@id/productSummaryTextView" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/installView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="13dp"
        android:lines="1"
        android:ellipsize="end"
        android:textAllCaps="false"
        android:text="@string/installNowText"
        android:textSize="23sp"
        android:fontFamily="@font/upcil"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"

        apps:cornerRadius="51dp"
        apps:icon="@drawable/install_now_icon"
        apps:iconSize="31dp"
        apps:iconTint="@color/light"
        apps:iconGravity="textEnd"
        apps:rippleColor="@color/default_color_bright"
        apps:backgroundTint="@color/dark"

        apps:layout_constraintTop_toTopOf="@id/productIconImageView"
        apps:layout_constraintBottom_toTopOf="@id/productNameTextView"
        apps:layout_constraintStart_toEndOf="@id/productIconImageView"
        apps:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>