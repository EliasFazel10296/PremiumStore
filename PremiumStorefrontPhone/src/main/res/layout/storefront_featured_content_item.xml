<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootViewItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="0dp"
    android:layout_marginEnd="11dp"
    android:background="@android:color/transparent">

    <net.geekstools.imageview.customshapes.ShapesImage
        android:id="@+id/backgroundCoverImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"

        apps:shapeDrawable="@drawable/storefront_featured_product_image"

        apps:layout_constraintTop_toTopOf="parent"
        apps:layout_constraintStart_toStartOf="parent"
        apps:layout_constraintEnd_toEndOf="parent"/>

    <net.geeksempire.blurry.effect.view.RealtimeBlurView
        android:id="@+id/productNameBlur"
        android:layout_width="match_parent"
        android:layout_height="31dp"

        apps:realtimeBlurRadius="19dp"
        apps:realtimeOverlayColor="@color/light_transparent_higher"
        apps:realtimeSecondOverlayColor="@color/light_transparent"
        apps:realtimeBlurBottomRight="19dp"

        apps:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/productNameTextView"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:gravity="center_horizontal"
        android:textColor="@color/dark"
        android:textSize="19sp"
        android:shadowColor="@color/light"
        android:shadowRadius="17"

        apps:layout_constraintBottom_toBottomOf="parent"/>

    <net.geeksempire.blurry.effect.view.RealtimeBlurView
        android:id="@+id/productIconBlur"
        android:layout_width="71dp"
        android:layout_height="71dp"

        apps:realtimeBlurRadius="19dp"
        apps:realtimeOverlayColor="@color/light_transparent_higher"
        apps:realtimeSecondOverlayColor="@color/light_transparent"
        apps:realtimeBlurTopLeft="51dp"
        apps:realtimeBlurTopRight="51dp"
        apps:realtimeBlurBottomLeft="51dp"
        apps:realtimeBlurBottomRight="51dp"

        apps:layout_constraintBottom_toTopOf="@id/productNameTextView"
        apps:layout_constraintStart_toStartOf="parent"
        apps:layout_constraintEnd_toEndOf="parent"/>

    <net.geekstools.imageview.customshapes.ShapesImage
        android:id="@+id/productIconImageView"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:scaleType="centerCrop"

        apps:shape="circle"

        apps:layout_constraintTop_toTopOf="@id/productIconBlur"
        apps:layout_constraintBottom_toBottomOf="@id/productIconBlur"
        apps:layout_constraintStart_toStartOf="@id/productIconBlur"
        apps:layout_constraintEnd_toEndOf="@id/productIconBlur"/>

</androidx.constraintlayout.widget.ConstraintLayout>