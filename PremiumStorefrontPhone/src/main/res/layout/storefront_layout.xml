<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEEAFF"
    tools:context="co.geeksempire.premium.storefront.StorefrontConfigurations.UserInterface.Storefront">

    <!--  Content  -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        apps:layout_constraintWidth_percent="0.91"

        apps:layout_constraintTop_toTopOf="parent"
        apps:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contentWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="13dp"
            android:paddingStart="0dp"
            android:paddingEnd="11dp"
            android:background="@drawable/storefront_content_background_light">

            <!-- Top Section -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/contentTopSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                apps:layout_constraintTop_toTopOf="parent"
                apps:layout_constraintStart_toStartOf="parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/featuredContentRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    apps:layout_constraintTop_toTopOf="parent"
                    apps:layout_constraintStart_toStartOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Bottom Section -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/contentBottomSection"
                android:layout_width="match_parent"
                android:layout_height="0dp"

                apps:layout_constraintTop_toBottomOf="@id/contentTopSection"
                apps:layout_constraintBottom_toBottomOf="parent"
                apps:layout_constraintStart_toStartOf="parent">

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <!--  Side Panel  -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/sidePanelWrapper"
        android:layout_width="0dp"
        android:layout_height="match_parent"

        apps:layout_constraintWidth_percent="0.19"

        apps:layout_constraintTop_toTopOf="parent"
        apps:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/sidePanelTopSection"
            android:layout_width="match_parent"
            android:layout_height="333dp"
            android:layout_marginStart="29dp"

            apps:layout_constraintTop_toTopOf="parent"
            apps:layout_constraintStart_toStartOf="parent">

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/sidePanelBottomSection"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="29dp"

            apps:layout_constraintTop_toBottomOf="@id/sidePanelTopSection"
            apps:layout_constraintStart_toStartOf="parent">

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/actionView"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:layout_marginVertical="19dp"
        android:insetLeft="0dp"
        android:insetTop="0dp"
        android:insetRight="0dp"
        android:insetBottom="0dp"

        apps:icon="@drawable/filter_icon"
        apps:iconTint="@color/light"
        apps:iconSize="23dp"
        apps:iconGravity="textStart"
        apps:iconPadding="0dp"
        apps:elevation="7dp"
        apps:cornerRadius="51dp"
        apps:rippleColor="@color/default_color"
        apps:backgroundTint="@color/dark"


        apps:layout_constraintWidth_percent="0.43"
        apps:layout_constraintBottom_toBottomOf="parent"
        apps:layout_constraintStart_toStartOf="parent"
        apps:layout_constraintEnd_toEndOf="parent"/>

    <co.geeksempire.premium.storefront.Utils.UI.Views.GlowingButton
        android:layout_width="177dp"
        android:layout_height="51dp"

        apps:backgroundColor="@color/default_color_game"
        apps:unpressedGlowSize="7dp"
        apps:pressedGlowSize="11dp"
        apps:glowColor="@color/default_color_game_transparent"
        apps:cornerRadius="51dp"

        apps:layout_constraintTop_toTopOf="parent"
        apps:layout_constraintBottom_toBottomOf="parent"
        apps:layout_constraintStart_toStartOf="parent"
        apps:layout_constraintEnd_toEndOf="parent"/>

