<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:id="@+id/verticalArtLayer">

        <shape>

            <solid android:color="@color/transparent" />

        </shape>

    </item>

    <item
        android:id="@+id/rippleMask"
        android:width="303dp"
        android:height="70dp"
        android:top="5dp">
        <ripple
            android:color="@color/default_color">

            <item
                android:id="@android:id/mask">

                <shape android:shape="rectangle">

                    <corners
                        android:topLeftRadius="21dp"
                        android:topRightRadius="21dp"
                        android:bottomLeftRadius="21dp"
                        android:bottomRightRadius="21dp"/>

                    <solid android:color="@color/default_color" />

                </shape>

            </item>

        </ripple>
    </item>

</layer-list>