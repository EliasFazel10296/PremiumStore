<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:height="51dp"
        android:width="51dp">

        <shape
            android:shape="rectangle">

            <solid
                android:color="@color/premiumLight"/>

        </shape>

    </item>

    <item
        android:id="@+id/clearCircle"
        android:height="41dp"
        android:width="41dp"
        android:gravity="center">

        <shape
            android:shape="oval">

            <solid
                android:color="@color/green"/>

        </shape>

    </item>

    <item
        android:id="@+id/clearRectangle"
        android:height="25dp"
        android:width="25dp"
        android:gravity="center_vertical|end">

        <shape
            android:shape="rectangle">

            <solid
                android:color="@color/green"/>

        </shape>

    </item>

    <item
        android:height="17dp"
        android:width="11.6dp"
        android:gravity="top|end">

        <shape
            android:shape="rectangle">

            <corners
                android:topLeftRadius="0dp"
                android:topRightRadius="0dp"
                android:bottomLeftRadius="51dp"
                android:bottomRightRadius="3dp"/>

            <solid
                android:color="@color/premiumLight"/>

        </shape>

    </item>

    <item
        android:height="18dp"
        android:width="11dp"
        android:gravity="bottom|end">

        <shape
            android:shape="rectangle">

            <corners
                android:topLeftRadius="51dp"
                android:topRightRadius="3dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"/>

            <solid
                android:color="@color/premiumLight"/>

        </shape>

    </item>

</layer-list>