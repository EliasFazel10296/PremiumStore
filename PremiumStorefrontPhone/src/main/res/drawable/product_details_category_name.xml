<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:gravity="center">

        <shape
            android:shape="rectangle"
            android:useLevel="false">

            <corners
                android:topLeftRadius="19dp"
                android:bottomLeftRadius="19dp"
                android:topRightRadius="51dp"
                android:bottomRightRadius="51dp"/>

            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="@color/transparent"
                android:centerColor="@color/default_color_light"
                android:centerY="0.17"
                android:endColor="@color/default_color_light"/>

        </shape>

    </item>

    <item
        android:id="@+id/clearLayer"
        android:top="1dp"
        android:bottom="1dp"
        android:end="1dp"
        android:gravity="center">

        <shape
            android:shape="rectangle"
            android:useLevel="false">

            <corners
                android:topLeftRadius="19dp"
                android:bottomLeftRadius="19dp"
                android:topRightRadius="51dp"
                android:bottomRightRadius="51dp"/>

            <solid
                android:color="@color/premiumLight" />

        </shape>

    </item>

</layer-list>