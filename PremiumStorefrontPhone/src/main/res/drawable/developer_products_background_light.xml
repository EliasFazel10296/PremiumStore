<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:height="159dp"
        android:width="159dp"
        android:gravity="center"
        android:drawable="@drawable/squircle_icon_light">

    </item>

    <item
        android:height="123dp"
        android:width="123dp"
        android:gravity="center" >

        <shape>

            <corners
                android:radius="29dp"/>

            <gradient
                android:gradientRadius="79dp"
                android:type="linear"
                android:angle="90"
                android:startColor="@color/premiumLight"
                android:endColor="@color/white"/>

            <stroke
                android:color="@color/white_transparent"
                android:width="0.7dp"/>

        </shape>

    </item>

    <item
        android:id="@+id/rippleMask"
        android:height="123dp"
        android:width="123dp"
        android:gravity="center">

        <ripple
            android:color="@color/white">

            <item android:id="@android:id/mask">

                <shape android:shape="rectangle">

                    <corners
                        android:radius="29dp"/>

                    <solid android:color="@color/white" />

                </shape>

            </item>

        </ripple>

    </item>

</layer-list>