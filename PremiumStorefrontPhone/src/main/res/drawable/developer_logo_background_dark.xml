<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:height="102dp"
        android:width="142dp">

        <shape
            android:shape="rectangle">

            <solid
                android:color="@color/transparent"/>

        </shape>

    </item>

    <item
        android:height="34dp"
        android:width="142dp"
        android:gravity="bottom|center_horizontal">

        <shape
            android:shape="rectangle">

            <solid
                android:color="@color/premiumDark"/>

        </shape>

    </item>

    <item
        android:id="@+id/circleLayer"
        android:height="102dp"
        android:width="102dp"
        android:gravity="bottom|center_horizontal">

        <shape
            android:shape="oval">

            <solid
                android:color="@color/green"/>

        </shape>

    </item>

    <!-- Bottom Left Of Circle -->
    <item
        android:height="51dp"
        android:width="24dp"
        android:gravity="bottom|start">

        <shape
            android:shape="rectangle">

            <corners
                android:topRightRadius="51dp"/>

            <solid
                android:color="@color/premiumDark"/>

        </shape>

    </item>

    <!-- Bottom Right Of Circle -->
    <item
        android:height="51dp"
        android:width="24dp"
        android:gravity="bottom|end">

        <shape
            android:shape="rectangle">

            <corners
                android:topLeftRadius="51dp"/>

            <solid
                android:color="@color/premiumDark"/>

        </shape>

    </item>

</layer-list>