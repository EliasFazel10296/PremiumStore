<layer-list xmlns:android="http://schemas.android.com/apk/res/android" android:autoMirrored="true" >

    <item
        android:height="57dp"
        android:width="151dp">

        <color android:color="@color/transparent"/>

    </item>

    <item
        android:height="25dp"
        android:width="149dp"
        android:gravity="top|start">

        <shape
            android:shape="rectangle">

            <corners
                android:topLeftRadius="51dp"
                android:topRightRadius="51dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="13dp"/>

            <gradient
                android:angle="270"
                android:startColor="#DEEAFF"
                android:centerColor="#DEEAFF"
                android:endColor="#ffffff"
                android:centerX="0"
                android:centerY="0.5"/>

        </shape>

    </item>

    <item
        android:height="25dp"
        android:width="149dp"
        android:gravity="bottom|end">

        <shape
            android:shape="rectangle">

            <corners
                android:topLeftRadius="13dp"
                android:topRightRadius="1dp"
                android:bottomLeftRadius="51dp"
                android:bottomRightRadius="51dp"/>

            <gradient
                android:angle="270"
                android:startColor="#77000000"
                android:centerColor="#DEEAFF"
                android:endColor="#DEEAFF"
                android:centerX="1"
                android:centerY="0.5"/>

        </shape>

    </item>

    <item
        android:height="50dp"
        android:width="151dp"
        android:gravity="center">

        <shape
            android:shape="rectangle">

            <corners
                android:topLeftRadius="51dp"
                android:topRightRadius="51dp"
                android:bottomLeftRadius="51dp"
                android:bottomRightRadius="51dp"/>

            <solid android:color="#DEEAFF" />

        </shape>

    </item>

</layer-list>