<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:height="41dp"
        android:width="41dp"
        android:gravity="center">

        <shape
            android:shape="rectangle"
            android:useLevel="false">

            <corners
                android:topLeftRadius="51dp"
                android:bottomLeftRadius="51dp"
                android:topRightRadius="19dp"
                android:bottomRightRadius="19dp"/>

            <gradient
                android:type="linear"
                android:angle="0"
                android:startColor="@color/default_color_light"
                android:centerColor="@color/default_color_light"
                android:centerY="0.5"
                android:endColor="@color/transparent"/>

        </shape>

    </item>

    <item
        android:id="@+id/clearLayer"
        android:height="40dp"
        android:width="40dp"
        android:gravity="center|end">

        <shape
            android:shape="rectangle"
            android:useLevel="false">

            <corners
                android:topLeftRadius="51dp"
                android:bottomLeftRadius="51dp"
                android:topRightRadius="19dp"
                android:bottomRightRadius="19dp"/>

            <solid
                android:color="@color/green" />

        </shape>

    </item>

</layer-list>