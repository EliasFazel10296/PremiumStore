<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:id="@+id/circleIconFrame"
        android:height="77dp"
        android:width="77dp"
        android:gravity="center">

        <shape
            android:shape="ring"
            android:innerRadius="35.9dp"
            android:thickness="2.1dp"
            android:useLevel="false">

            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="@color/dark"
                android:centerColor="@color/white"
                android:centerX="0.55"
                android:endColor="@color/white" />

        </shape>

    </item>

</layer-list>