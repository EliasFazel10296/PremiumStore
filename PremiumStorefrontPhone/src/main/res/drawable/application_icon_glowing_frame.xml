<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:id="@+id/circleIconBackground"
        android:height="87dp"
        android:width="87dp">

        <shape
            android:shape="oval">

            <gradient
                android:type="radial"
                android:gradientRadius="95dp"
                android:startColor="@color/white"
                android:centerColor="@color/transparent"
                android:endColor="@color/transparent" />

        </shape>

    </item>

    <item
        android:id="@+id/circleIconFrame"
        android:height="87dp"
        android:width="87dp">

        <shape
            android:shape="ring"
            android:innerRadius="41dp"
            android:thickness="1dp"
            android:useLevel="false">
            <solid android:color="@color/white" />

        </shape>

    </item>

</layer-list>