<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:id="@+id/circleIconBackground"
        android:height="51dp"
        android:width="51dp"
        android:gravity="center">

        <shape
            android:shape="oval">

            <solid android:color="@color/white" />

        </shape>

    </item>

    <item
        android:id="@+id/circleIconFrame"
        android:height="51dp"
        android:width="51dp"
        android:gravity="center">

        <shape
            android:shape="ring"
            android:innerRadius="24dp"
            android:thickness="1.7dp"
            android:useLevel="false">

            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="@color/premiumLight"
                android:endColor="@color/premiumDark" />

        </shape>

    </item>

</layer-list>