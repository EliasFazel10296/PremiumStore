<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:height="3dp"
        android:gravity="bottom">

        <shape
            android:shape="rectangle">

            <corners
                android:topLeftRadius="19dp"
                android:topRightRadius="0dp"
                android:bottomLeftRadius="19dp"
                android:bottomRightRadius="0dp"/>

            <gradient
                android:type="linear"
                android:angle="180"
                android:startColor="@color/premiumLight"
                android:centerColor="@color/premiumLight"
                android:endColor="@color/light" />

        </shape>

    </item>

    <item
        android:id="@+id/rippleMask"
        android:height="3dp"
        android:gravity="bottom">

        <ripple
            android:color="@color/black">

            <item android:id="@android:id/mask">

                <shape android:shape="rectangle">

                    <corners
                        android:topLeftRadius="19dp"
                        android:topRightRadius="0dp"
                        android:bottomLeftRadius="19dp"
                        android:bottomRightRadius="0dp"/>

                    <solid android:color="@color/default_color_bright" />

                </shape>

            </item>

        </ripple>

    </item>

</layer-list>