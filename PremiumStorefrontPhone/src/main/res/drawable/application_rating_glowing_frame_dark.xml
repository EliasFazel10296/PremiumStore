<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:id="@+id/circleIconBackground"
        android:height="57dp"
        android:width="57dp"
        android:gravity="center">

        <shape
            android:shape="oval">

            <solid android:color="@color/black" />

        </shape>

    </item>

    <item
        android:height="57dp"
        android:width="57dp"
        android:gravity="center">

        <shape
            android:shape="oval">

            <gradient
                android:type="radial"
                android:gradientRadius="51dp"
                android:startColor="@color/premiumLightTransparent"
                android:centerColor="@color/premiumLightTransparent"
                android:centerX="0.59"
                android:centerY="0.59"
                android:endColor="@color/black" />

        </shape>

    </item>

    <item
        android:height="57dp"
        android:width="57dp"
        android:gravity="center">

        <shape
            android:shape="oval">

            <gradient
                android:type="radial"
                android:gradientRadius="51dp"
                android:startColor="@color/premiumLightTransparent"
                android:centerColor="@color/premiumLightTransparent"
                android:centerX="0.41"
                android:centerY="0.41"
                android:endColor="@color/white" />

        </shape>

    </item>

    <item
        android:id="@+id/circleIconFrame"
        android:height="57dp"
        android:width="57dp"
        android:gravity="center">

        <shape
            android:shape="ring"
            android:innerRadius="26.9dp"
            android:thickness="1.7dp"
            android:useLevel="false">

            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="@color/dark_transparent"
                android:centerColor="@color/white"
                android:centerX="0.5"
                android:endColor="@color/white" />

        </shape>

    </item>

</layer-list>