<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:id="@+id/circleIconBackground"
        android:height="87dp"
        android:width="87dp">

        <shape
            android:shape="oval">

            <gradient
                android:type="radial"
                android:gradientRadius="71dp"
                android:startColor="@color/transparent"
                android:centerColor="@color/transparent"
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="@color/white" />

        </shape>

    </item>

    <item
        android:id="@+id/circleIconFrame"
        android:height="87dp"
        android:width="87dp">

        <shape
            android:shape="ring"
            android:innerRadius="41.7dp"
            android:thickness="1.3dp"
            android:useLevel="false">

            <solid android:color="@color/white" />

        </shape>

    </item>

</layer-list>