<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:top="199dp"
        android:id="@+id/temporaryBackground">

        <shape
            android:shape="rectangle">

            <corners
                android:topLeftRadius="19dp"
                android:topRightRadius="19dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"/>

            <gradient
                android:type="linear"
                android:angle="180"
                android:startColor="@color/light"
                android:centerColor="@color/light"
                android:endColor="@color/light" />

        </shape>

    </item>

    <item
        android:top="199dp"
        android:id="@+id/foregroundBackground">

        <shape
            android:shape="rectangle">

            <corners
                android:topLeftRadius="19dp"
                android:topRightRadius="19dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="0dp"/>

            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="@color/light"
                android:centerColor="@color/premiumLight"
                android:centerY="0.50"
                android:endColor="@color/premiumLight" />

        </shape>

    </item>

</layer-list>