<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:id="@+id/temporaryBackground"
        android:end="21dp"
        android:top="13dp"
        android:bottom="13dp">

        <shape
            android:shape="rectangle">

            <corners
                android:topLeftRadius="0dp"
                android:topRightRadius="19dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="19dp"/>

            <gradient
                android:type="linear"
                android:angle="180"
                android:startColor="@color/light"
                android:centerColor="@color/light"
                android:endColor="@color/light" />

        </shape>

    </item>

    <item
        android:end="51dp"
        android:bottom="51dp">

        <rotate
            android:fromDegrees="1"
            android:pivotX="50%"
            android:pivotY="0%">

            <shape
                android:shape="rectangle">

                <gradient
                    android:type="linear"
                    android:angle="180"
                    android:startColor="@color/transparent"
                    android:centerColor="@color/premiumLight"
                    android:endColor="@color/premiumLight" />

            </shape>

        </rotate>


    </item>

    <item
        android:end="51dp"
        android:top="51dp">

        <rotate
            android:fromDegrees="-1"
            android:pivotX="50%"
            android:pivotY="100%">

            <shape
                android:shape="rectangle">

                <gradient
                    android:type="linear"
                    android:angle="180"
                    android:startColor="@color/transparent"
                    android:centerColor="@color/premiumLight"
                    android:endColor="@color/premiumLight" />

            </shape>

        </rotate>


    </item>

    <item
        android:id="@+id/foregroundBackground"
        android:top="3dp"
        android:bottom="3dp"
        android:end="17dp">

        <shape
            android:shape="rectangle">

            <corners
                android:topLeftRadius="0dp"
                android:topRightRadius="19dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="19dp"/>

            <gradient
                android:type="linear"
                android:angle="180"
                android:startColor="@color/light"
                android:centerColor="@color/premiumLight"
                android:endColor="@color/premiumLight" />

        </shape>

    </item>

</layer-list>