<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:id="@+id/temporaryBackground"
        android:end="21dp"
        android:top="11dp"
        android:bottom="11dp">

        <shape
            android:shape="rectangle">

            <corners
                android:topLeftRadius="0dp"
                android:topRightRadius="19dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="19dp"/>

            <gradient
                android:type="linear"
                android:angle="180"
                android:startColor="@color/light"
                android:centerColor="@color/light"
                android:endColor="@color/light" />

        </shape>

    </item>

    <item
        android:id="@+id/foregroundBackground"
        android:end="17dp">

        <shape
            android:shape="rectangle">

            <corners
                android:topLeftRadius="0dp"
                android:topRightRadius="19dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="19dp"/>

            <gradient
                android:type="linear"
                android:angle="180"
                android:startColor="@color/light"
                android:centerColor="@color/premiumLight"
                android:endColor="@color/premiumLight" />

        </shape>

    </item>


</layer-list>