<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:gravity="top|center_horizontal"
        android:width="51dp"
        android:height="51dp" >

        <shape
            android:shape="oval">

            <gradient
                android:type="radial"
                android:gradientRadius="25dp"
                android:startColor="@color/default_color_light"
                android:centerColor="@color/default_color_light"
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="#03008dda"/>

        </shape>

    </item>

    <item
        android:gravity="top|center_horizontal"
        android:width="47dp"
        android:height="47dp" >

        <shape
            android:shape="oval">

            <solid
                android:color="@color/premiumLight" />

        </shape>

    </item>

    <item
        android:height="47dp"
        android:width="47dp"
        android:gravity="top|center_horizontal">

        <shape
            android:shape="ring"
            android:innerRadius="22.2dp"
            android:thickness="1dp"
            android:useLevel="false">

            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="@color/white"
                android:centerColor="#03FFFFFF"
                android:centerY="0.7"
                android:endColor="@color/white_transparent"/>

        </shape>

    </item>

    <item
        android:width="14dp"
        android:height="4.9dp"
        android:top="29dp"
        android:start="20.8dp">

        <rotate
            android:toDegrees="0"
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="0%">

            <shape
                android:shape="rectangle">

                <corners
                    android:radius="51dp" />

                <gradient
                    android:type="linear"
                    android:gradientRadius="25dp"
                    android:startColor="@color/premiumLight"
                    android:centerColor="@color/white"
                    android:centerX="0.5"
                    android:centerY="0.5"
                    android:endColor="@color/white"/>

            </shape>

        </rotate>

    </item>

    <item
        android:width="23dp"
        android:height="23dp"
        android:top="13dp"
        android:start="13dp"
        android:drawable="@drawable/back_indicator_icon"/>

</layer-list>