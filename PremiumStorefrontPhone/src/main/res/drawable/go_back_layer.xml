<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:gravity="top|start"
        android:width="51dp"
        android:height="51dp" >

        <shape
            android:shape="oval">

            <gradient
                android:type="radial"
                android:gradientRadius="25dp"
                android:startColor="@color/red"
                android:centerColor="@color/red"
                android:centerX="0.5"
                android:centerY="0.5"
                android:endColor="#01000000"/>

        </shape>

    </item>

    <item
        android:gravity="top|start"
        android:width="49dp"
        android:height="49dp" >

        <shape
            android:shape="oval">

            <solid
                android:color="@color/premiumLight" />

        </shape>

    </item>

    <item
        android:height="49dp"
        android:width="49dp"
        android:gravity="top|start">

        <shape
            android:shape="ring"
            android:innerRadius="23.4dp"
            android:thickness="1dp"
            android:useLevel="false">

            <gradient
                android:type="linear"
                android:angle="315"
                android:startColor="@color/white"
                android:centerColor="#03FFFFFF"
                android:centerY="0.7"
                android:endColor="@color/white"/>

        </shape>

    </item>

    <item
        android:width="29dp"
        android:height="29dp"
        android:top="11dp"
        android:start="7dp"
        android:drawable="@drawable/back_indicator_icon"/>

</layer-list>