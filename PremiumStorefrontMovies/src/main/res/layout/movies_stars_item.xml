<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootViewItem"
    android:layout_height="229dp"
    android:layout_width="133dp"
    android:layout_marginTop="7dp"
    android:backgroundTint="@color/premiumLightTransparent"
    android:background="@drawable/rectercle"

    apps:layout_constraintDimensionRatio="1:1">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/movieStarTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingVertical="13dp"
        android:paddingHorizontal="27dp"
        android:gravity="center_vertical"
        android:text="@string/applicationName"
        android:textColor="@color/default_color_game_bright"
        android:textStyle="bold"
        android:shadowColor="@color/default_color_game_bright"
        android:shadowRadius="9"
        android:shadowDx="0"
        android:shadowDy="0"
        android:fontFamily="@font/neon"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"

        apps:autoSizeTextType="uniform" />

    <net.geekstools.imageview.customshapes.ShapesImage
        android:id="@+id/movieStarImageView"
        android:layout_height="223dp"
        android:layout_width="127dp"
        android:scaleType="centerCrop"

        apps:shapeDrawable="@drawable/rectercle"

        apps:layout_constraintTop_toTopOf="parent"
        apps:layout_constraintBottom_toBottomOf="parent"
        apps:layout_constraintStart_toStartOf="parent"
        apps:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>