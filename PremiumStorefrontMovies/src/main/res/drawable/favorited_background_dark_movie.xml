<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>

        <shape
            android:shape="rectangle">

            <corners android:radius="19dp"/>

            <stroke
                android:width="0.7dp"
                android:color="@color/dark_transparent_half"/>

        </shape>

    </item>

    <item>

        <shape
            android:shape="rectangle">

            <corners android:radius="19dp"/>

            <gradient
                android:type="radial"
                android:gradientRadius="99dp"
                android:startColor="@color/dark_transparent_half"
                android:centerColor="@color/dark_transparent_high"
                android:centerX="0"
                android:centerY="0"
                android:endColor="@color/transparent"/>

        </shape>

    </item>

    <item>

        <shape
            android:shape="rectangle">

            <corners android:radius="19dp"/>

            <gradient
                android:type="radial"
                android:gradientRadius="99dp"
                android:startColor="@color/dark_transparent_half"
                android:centerColor="@color/dark_transparent_high"
                android:centerX="1"
                android:centerY="1"
                android:endColor="@color/transparent"/>

        </shape>

    </item>

    <item>

        <shape
            android:shape="rectangle">

            <corners android:radius="19dp"/>

            <gradient
                android:type="radial"
                android:gradientRadius="99dp"
                android:startColor="@color/dark_transparent_half"
                android:centerColor="@color/dark_transparent_high"
                android:centerX="0"
                android:centerY="1"
                android:endColor="@color/transparent"/>

        </shape>

    </item>

    <item
        android:gravity="top|start">

        <shape
            android:shape="rectangle">

            <corners android:radius="19dp"/>

            <gradient
                android:type="radial"
                android:gradientRadius="99dp"
                android:startColor="@color/dark_transparent_half"
                android:centerColor="@color/dark_transparent_high"
                android:centerX="1"
                android:centerY="0"
                android:endColor="@color/transparent"/>

        </shape>

    </item>

</layer-list>