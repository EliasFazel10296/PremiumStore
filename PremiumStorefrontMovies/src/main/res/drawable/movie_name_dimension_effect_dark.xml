<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:id="@+id/lineGlow"
        android:height="253dp" >

        <shape
            android:shape="rectangle">

            <corners
                android:radius="23dp"/>

            <solid
                android:color="@color/transparent" />

            <stroke
                android:width="3dp"
                android:color="@color/default_color_game_bright"/>

        </shape>

    </item>

    <item
        android:height="253dp" >

        <shape
            android:shape="rectangle">

            <corners android:radius="23dp"/>

            <gradient
                android:type="radial"
                android:gradientRadius="73dp"
                android:startColor="@color/dark_transparent_half"
                android:centerColor="@color/dark_transparent_high"
                android:centerX="0"
                android:centerY="0"
                android:endColor="@color/transparent"/>

        </shape>

    </item>

    <item
        android:height="73dp" >

        <shape
            android:shape="rectangle">

            <corners android:radius="23dp"/>

            <gradient
                android:type="radial"
                android:gradientRadius="73dp"
                android:startColor="@color/dark_transparent_half"
                android:centerColor="@color/dark_transparent_high"
                android:centerX="1"
                android:centerY="1"
                android:endColor="@color/transparent"/>

        </shape>

    </item>

    <item
        android:height="253dp" >

        <shape
            android:shape="rectangle">

            <corners android:radius="23dp"/>

            <gradient
                android:type="radial"
                android:gradientRadius="73dp"
                android:startColor="@color/dark_transparent_half"
                android:centerColor="@color/dark_transparent_high"
                android:centerX="0"
                android:centerY="1"
                android:endColor="@color/transparent"/>

        </shape>

    </item>

    <item
        android:gravity="top|start"
        android:height="253dp" >

        <shape
            android:shape="rectangle">

            <corners android:radius="23dp"/>

            <gradient
                android:type="radial"
                android:gradientRadius="73dp"
                android:startColor="@color/dark_transparent_half"
                android:centerColor="@color/dark_transparent_high"
                android:centerX="1"
                android:centerY="0"
                android:endColor="@color/transparent"/>

        </shape>

    </item>

</layer-list>