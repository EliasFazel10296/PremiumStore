<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:height="97dp"
        android:start="1dp"
        android:end="1dp"
        android:gravity="center"
        android:drawable="@color/default_color_bright"/>

    <item
        android:height="18.7dp"
        android:gravity="top"
        android:start="1dp"
        android:end="1dp">

        <shape
            android:shape="rectangle">

            <corners
                android:bottomLeftRadius="99dp"
                android:bottomRightRadius="99dp"/>

            <solid
                android:color="@color/premiumLight"/>

        </shape>

    </item>

    <item
        android:height="19dp"
        android:gravity="bottom"
        android:start="1dp"
        android:end="1dp">

        <shape
            android:shape="rectangle">

            <corners
                android:topRightRadius="99dp"
                android:topLeftRadius="99dp"/>

            <solid
                android:color="@color/premiumLight"/>

        </shape>

    </item>

</layer-list>