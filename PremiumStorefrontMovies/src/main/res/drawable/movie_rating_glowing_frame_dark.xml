<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:id="@+id/circleIconFrame"
        android:height="29dp"
        android:width="59dp"
        android:gravity="center">

        <shape
            android:shape="rectangle">

            <corners
                android:radius="7dp" />

            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="@color/dark_transparent"
                android:centerColor="@color/white"
                android:centerX="0.5"
                android:endColor="@color/white" />

        </shape>

    </item>

    <item
        android:id="@+id/circleIconBackground"
        android:height="26dp"
        android:width="57dp"
        android:gravity="center">

        <shape
            android:shape="rectangle">

            <corners
                android:radius="7dp" />

            <solid android:color="@color/premiumDark" />

        </shape>

    </item>

    <item
        android:height="23dp"
        android:width="23dp"
        android:gravity="center"
        android:drawable="@drawable/star_rate_icon_dark"/>

    <item
        android:height="26dp"
        android:width="57dp"
        android:gravity="center">

        <shape
            android:shape="rectangle">

            <corners
                android:radius="7dp" />

            <gradient
                android:type="radial"
                android:gradientRadius="47dp"
                android:startColor="@color/premiumLightTransparent"
                android:centerColor="@color/premiumLightTransparent"
                android:centerX="0.59"
                android:centerY="0.79"
                android:endColor="@color/black" />

        </shape>

    </item>

    <item
        android:height="26dp"
        android:width="57dp"
        android:gravity="center">

        <shape
            android:shape="rectangle">

            <corners
                android:radius="7dp" />

            <gradient
                android:type="radial"
                android:gradientRadius="51dp"
                android:startColor="@color/premiumLightTransparent"
                android:centerColor="@color/premiumLightTransparent"
                android:centerX="0.41"
                android:centerY="0.19"
                android:endColor="@color/white" />

        </shape>

    </item>

</layer-list>