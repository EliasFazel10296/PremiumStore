<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:height="234dp"
        android:width="358dp">

        <shape
            android:shape="rectangle">

            <solid
                android:color="@color/transparent" />

        </shape>

    </item>

    <item
        android:height="234dp"
        android:width="323dp"
        android:gravity="end">

        <shape
            android:shape="rectangle">

            <corners
                android:topLeftRadius="17dp"
                android:topRightRadius="17dp"
                android:bottomLeftRadius="17dp"
                android:bottomRightRadius="17dp"/>

            <gradient
                android:angle="0"
                android:startColor="@color/premiumDark"
                android:centerColor="@color/dark"
                android:endColor="@color/premiumDark"/>

        </shape>

    </item>

    <item
        android:id="@+id/centerClearLayer"
        android:height="228dp"
        android:width="317dp"
        android:left="3dp"
        android:top="3dp"
        android:right="3dp"
        android:bottom="3dp"
        android:gravity="end">

        <shape
            android:shape="rectangle">

            <corners
                android:topLeftRadius="17dp"
                android:topRightRadius="17dp"
                android:bottomLeftRadius="17dp"
                android:bottomRightRadius="17dp"/>

            <solid
                android:color="@color/green" />

        </shape>

    </item>

    <item
        android:height="171dp"
        android:width="117dp"
        android:gravity="start|center_vertical">

        <shape
            android:shape="rectangle">

            <corners
                android:topLeftRadius="13dp"
                android:topRightRadius="13dp"
                android:bottomLeftRadius="13dp"
                android:bottomRightRadius="13dp"/>

            <gradient
                android:angle="90"
                android:startColor="@color/premiumDark"
                android:centerColor="@color/dark"
                android:endColor="@color/premiumDark"/>

        </shape>

    </item>

    <!-- Top Round Connection -->
    <item
        android:height="13dp"
        android:width="29dp"
        android:top="20dp"
        android:start="20dp"
        android:gravity="start|top">

        <shape
            android:shape="rectangle">

            <solid
                android:color="@color/premiumDark" />

        </shape>

    </item>

    <item
        android:id="@+id/topLeftConnection"
        android:height="13.6dp"
        android:width="15.4dp"
        android:top="18dp"
        android:start="19.8dp"
        android:gravity="start|top">

        <shape
            android:shape="rectangle">

            <corners
                android:bottomRightRadius="19dp"/>

            <solid
                android:color="@color/green" />

        </shape>

    </item>

    <item
        android:id="@+id/topRightConnection"
        android:height="13.2dp"
        android:width="15dp"
        android:top="18.5dp"
        android:start="38dp"
        android:gravity="start|top">

        <shape
            android:shape="rectangle">

            <corners
                android:topLeftRadius="2dp"
                android:bottomLeftRadius="19dp"/>

            <solid
                android:color="@color/green" />

        </shape>

    </item>

    <!-- Bottom Round Connection -->
    <item
        android:height="17dp"
        android:width="29dp"
        android:bottom="15dp"
        android:start="23dp"
        android:gravity="start|bottom">

        <shape
            android:shape="rectangle">

            <solid
                android:color="@color/premiumDark" />

        </shape>

    </item>

    <item
        android:id="@+id/bottomLeftConnection"
        android:height="17.4dp"
        android:width="13.3dp"
        android:bottom="14.5dp"
        android:start="22.0dp"
        android:gravity="start|bottom">

        <shape
            android:shape="rectangle">

            <corners
                android:topRightRadius="19dp"/>

            <solid
                android:color="@color/green" />

        </shape>

    </item>

    <item
        android:id="@+id/bottomRightConnection"
        android:height="17.3dp"
        android:width="15dp"
        android:bottom="14.3dp"
        android:start="39dp"
        android:gravity="start|bottom">

        <shape
            android:shape="rectangle">

            <corners
                android:bottomLeftRadius="2dp"
                android:topLeftRadius="19dp"/>

            <solid
                android:color="@color/green" />

        </shape>

    </item>

</layer-list>