<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:apps="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StorefrontConfigurations.UserInterface.Storefront">

    <!--  Content  -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/contentNestedScrollView"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/storefront_content_background_light"

        apps:layout_constraintWidth_percent="0.91"

        apps:layout_constraintTop_toTopOf="parent"
        apps:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contentWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="7dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/contentTopSection"
                android:layout_width="match_parent"
                android:layout_height="0dp"

                apps:layout_constraintHeight_percent="0.37"

                apps:layout_constraintTop_toTopOf="parent"
                apps:layout_constraintStart_toStartOf="parent">

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/contentBottomSection"
                android:layout_width="match_parent"
                android:layout_height="0dp"

                apps:layout_constraintHeight_percent="0.63"

                apps:layout_constraintBottom_toBottomOf="parent"
                apps:layout_constraintStart_toStartOf="parent">

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <!--  Side Panel  -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/sidePanelNestedScrollView"
        android:layout_width="0dp"
        android:layout_height="match_parent"

        apps:layout_constraintWidth_percent="0.19"

        apps:layout_constraintTop_toTopOf="parent"
        apps:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/sidePanelWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/sidePanelTopSection"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="29dp"

                apps:layout_constraintHeight_percent="0.37"

                apps:layout_constraintTop_toTopOf="parent"
                apps:layout_constraintStart_toStartOf="parent">

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/sidePanelBottomSection"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="29dp"

                apps:layout_constraintHeight_percent="0.63"

                apps:layout_constraintBottom_toBottomOf="parent"
                apps:layout_constraintStart_toStartOf="parent">

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>